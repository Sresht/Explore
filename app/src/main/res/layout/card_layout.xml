<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <!-- This 1-px line is necessary to separate cards in the RecyclerView -->
    <View android:background="@color/grey"
          android:layout_width = "match_parent"
          android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/card_thumbnail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher"
        android:contentDescription="@string/thumbnail"/>

    <Button
        android:id="@+id/bookmark_button"
        android:background="@drawable/bookmark_inactive"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="60dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/card_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="14dp"
        android:layout_alignParentEnd="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/category_green"
        />
    <RelativeLayout
        android:id="@+id/card_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/card_thumbnail"
        android:layout_toStartOf="@id/card_category">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="14dp"
            android:textSize="44sp"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="@string/title"
            />

        <TextView
            android:id="@+id/card_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_title"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="16sp"
            tools:text="@string/subtitle"
            />
    </RelativeLayout>
</RelativeLayout>
